{
    "name": "matteociaroni/flarum-title-restrictions",
    "description": "Rules to rule titles",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2.0"
    },
    "authors": [
        {
            "name": "Matteo Ciaroni",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "MatteoCiaroni\\TitleRestrictions\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Title restrictions",
            "category": "",
            "icon": {
                "name": "fa fa-i-cursor",
                "color": "white",
                "backgroundColor": "red"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": false,
                "js": true,
                "jsCommon": false,
                "css": false,
                "locale": true,
                "gitConf": false,
                "githubActions": false,
                "prettier": false,
                "typescript": false,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": false,
                "styleci": false
